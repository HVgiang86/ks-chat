<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KSChat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">#EADDFF</item>
        <item name="colorOnPrimaryContainer">#21005D</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--        Tertiary Color-->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>

        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>

        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.KSChat.WhiteBackground" parent="Theme.KSChat">
        <item name="android:background">@color/white</item>

    </style>

    <style name="Theme.KSChat.PurpleBackground" parent="Theme.KSChat">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppThemeNew.DialogTheme" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
    </style>

    <style name="Theme.KSChat.TextInputLayout.Credentials" parent="@style/Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/secondary</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeColor">@color/textinput_stroke_color_selector</item>
    </style>

    <style name="Theme.KSChat.TextInputLayout.Profile" parent="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/secondary</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeColor">@color/textinput_stroke_color_selector</item>

    </style>

    <style name="Theme.KSChat.TextInputEditText" parent="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="backgroundColor">@color/primary</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="indicatorColor">@color/white</item>

    </style>

    <style name="Theme.KSChat.DefaultText">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.KSChat.Text.InfoTextFieldLabel" parent="Theme.KSChat.DefaultText">
        <item name="android:textColor">@color/gray_text</item>

    </style>

    <style name="Theme.KSChat.Text.InfoTextField" parent="Theme.KSChat.DefaultText">
        <item name="android:textColor">@color/light_white_text</item>
    </style>

    <style name="Theme.KSChat.Text.AppNameLabel" parent="Theme.KSChat.DefaultText">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Theme.KSChat.Text.ErrorLogin" parent="Theme.KSChat.DefaultText">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Theme.KSChat.Text.AppBar" parent="Theme.KSChat.DefaultText" >
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>