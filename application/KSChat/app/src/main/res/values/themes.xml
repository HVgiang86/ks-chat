<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KSChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->

        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.KSChat.WhiteBackground" parent="Theme.KSChat" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.KSChat.PurpleBackground" parent="Theme.KSChat" >
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppThemeNew.DialogTheme" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
    </style>

    <style name="Theme.KSChat.TextInputLayout" parent="@style/ThemeOverlay.Material3.TextInputEditText">
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/secondary</item>
        <item name="errorIconDrawable">@null</item>

    </style>

    <style name="Theme.KSChat.TextInputEditText" parent="@style/ThemeOverlay.Material3.TextInputEditText">
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="backgroundColor">@color/primary</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="cursorColor">@color/white</item>
        <item name="indicatorColor">@color/white</item>
    </style>

    <style name="Theme.KSChat.DefaultText">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.KSChat.Text.InfoTextFieldLabel" parent="Theme.KSChat.DefaultText">
        <item name="android:textColor">@color/gray_text</item>

    </style>

    <style name="Theme.KSChat.Text.InfoTextField" parent="Theme.KSChat.DefaultText">
        <item name="android:textColor">@color/light_white_text</item>
    </style>

    <style name="Theme.KSChat.Text.AppNameLabel" parent="Theme.KSChat.DefaultText">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Theme.KSChat.Text.ErrorLogin" parent="Theme.KSChat.DefaultText">
        <item name="android:textColor">@color/secondary</item>
    </style>

</resources>